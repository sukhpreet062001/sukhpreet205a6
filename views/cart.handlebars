<div class="container">
  <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <div class="col mx-auto my-3">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-bicycle" viewBox="0 0 16 16">
              <path d="M4 4.5a.5.5 0 0 1 .5-.5H6a.5.5 0 0 1 0 1v.5h4.14l.386-1.158A.5.5 0 0 1 11 4h1a.5.5 0 0 1 0 1h-.64l-.311.935.807 1.29a3 3 0 1 1-.848.53l-.508-.812-2.076 3.322A.5.5 0 0 1 8 10.5H5.959a3 3 0 1 1-1.815-3.274L5 5.856V5h-.5a.5.5 0 0 1-.5-.5zm1.5 2.443-.508.814c.5.444.85 1.054.967 1.743h1.139L5.5 6.943zM8 9.057 9.598 6.5H6.402L8 9.057zM4.937 9.5a1.997 1.997 0 0 0-.487-.877l-.548.877h1.035zM3.603 8.092A2 2 0 1 0 4.937 10.5H3a.5.5 0 0 1-.424-.765l1.027-1.643zm7.947.53a2 2 0 1 0 .848-.53l1.026 1.643a.5.5 0 1 1-.848.53L11.55 8.623z"/>
            </svg>
            <h4 class="my-0 fw-normal">{{ plan.plan }}</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">C${{ plan.cost }}<small class="text-muted fw-light">/mo</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li>{{ plan.websites }} Website</li>
              <li>{{ plan.storage }} GB SSD Storage</li>
              <li>~{{ plan.visits }} Visits Monthly</li>
              <li>{{ plan.emails }} Email Account</li>
              <li>{{ plan.ssl }} SSL</li>
              <li>{{ plan.domains }} Domain</li>
              <li>{{ plan.bandwidth }} GB Bandwidth</li>
            </ul>
            <a type="button" class="w-100 btn btn-lg btn-primary" href="/checkout">Checkout</a>
          </div>
        </div>
      </div>
  </div>
</div>